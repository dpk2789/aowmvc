@model AowCore.Domain.Ledger

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/MyBooks/Views/Shared/_Layout.cshtml";
}

    <h1>
        @Html.ActionLink("<<Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-success" })
        Edit Ledger
    </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LedgerCategoryId" class="control-label">Ledger Category</label>
                <select asp-for="LedgerCategoryId" class="form-control" asp-items="ViewBag.LedgerCategoryId"></select>
                <span asp-validation-for="LedgerCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpeningBalance" class="control-label"></label>
                <input asp-for="OpeningBalance" class="form-control" />
                <span asp-validation-for="OpeningBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpeningBalanceCrDr" class="control-label"></label>
                <input asp-for="OpeningBalanceCrDr" class="form-control" />
                <span asp-validation-for="OpeningBalanceCrDr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrintName" class="control-label"></label>
                <input asp-for="PrintName" class="form-control" />
                <span asp-validation-for="PrintName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegTaxNumber" class="control-label"></label>
                <input asp-for="RegTaxNumber" class="form-control" />
                <span asp-validation-for="RegTaxNumber" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-horizontal">
                <h3>Shipping Address</h3>
                <hr />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Name</label>
                        @Html.EditorFor(model => model.PrintName, new { htmlAttributes = new { @class = "form-control", placeholder = "Print Name" } })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Contact </label>
                        @Html.EditorFor(model => model.AlternateContactNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Contact No." } })
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    @Html.EditorFor(model => model.AddressLine1, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label for="inputAddress2">Address 2</label>
                    @Html.EditorFor(model => model.AddressLine2, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", placeholder = "State/Province" } })
                    </div>
                    <div class="form-group col-md-2">
                        @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control", placeholder = "PinCode/ZipCode" } })
                    </div>

                    <div class="form-group col-md-6">

                        @Html.EditorFor(model => model.Country, new
                   {
                       htmlAttributes = new
                       {

                           @class = "form-control",
                           @placeholder = "Enter Country Name",
                           data_url = @Url.Action("GetCountriesForAutocomplete", "Companies")
                       }
                   })
                        @Html.HiddenFor(c => c.Country)
                        @*@Html.DropDownList("Country", ViewBag.Country as SelectList, "Select Country", htmlAttributes: new { @class = "form-control" })*@
                        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })

                    </div>


                </div>

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
