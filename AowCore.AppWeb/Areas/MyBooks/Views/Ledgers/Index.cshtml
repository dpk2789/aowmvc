@model IEnumerable<AowCore.AppWeb.ViewModels.LedgerViewModel>

@{
    ViewData["Title"] = "Ledgers";
    Layout = "~/Areas/MyBooks/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#reportTable').DataTable({
            "scrollX": true,
            "pageLength": 25
        });
    });
</script>

<h1>
    <i class="fas fa-clipboard-list"></i>
    Ledgers
    <a asp-action="Create" class="btn btn-sm btn-success">Create New</a>
</h1>

<table class="table table-hover responsive" id="reportTable" style="width:100%">
    <thead>
        <tr>
            <th>
                <label>Category</label>
            </th>
            <th>
                <label>Sub-Category</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningBalance)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RootCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpeningBalance)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
