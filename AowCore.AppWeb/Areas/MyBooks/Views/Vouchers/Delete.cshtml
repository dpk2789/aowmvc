@model AowCore.AppWeb.ViewModels.VoucherViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/MyBooks/Views/Shared/_Layout.cshtml";
}

<h1> @Html.ActionLink("<<Back to List", "Index", new { voucherName = Model.VoucherName, area = "MyBooks" }, htmlAttributes: new { @class = "btn btn-sm btn-success" })Delete</h1>

<h3>  Are you sure you want to delete this Voucher?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoucherName)
        </dt>
